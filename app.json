{
  "expo": {
    "name": "picklebean-mobile",
    "slug": "picklebean-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/expo-icons/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "picklebean",
    "extra": {
      "webUrl": "https://picklebean-ranking-app.web.app"
    },
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.niiazemil.picklebeanmobile",
      "associatedDomains": [
        "applinks:picklebean-ranking-app.web.app",
        "applinks:localhost"
      ],
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Picklebean uses your location to show nearby courts and calculate travel times when you tap Play Now.",
        "NSLocationAlwaysUsageDescription": "Picklebean can detect when you're at a court to help you quickly start matches and find other players nearby.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.814786041248-t2j1ml926rc7ddmif2mvpqg37m7llrfo",
              "picklebean"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/expo-icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.NFC",
        "android.permission.NFC"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.niiazemil.picklebeanmobile",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "picklebean-ranking-app.web.app",
              "pathPrefix": "/lobby"
            },
            {
              "scheme": "https",
              "host": "localhost",
              "port": "5173",
              "pathPrefix": "/lobby"
            },
            {
              "scheme": "picklebean"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/expo-icons/favicon.png"
    }
  }
}
